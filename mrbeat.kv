#:import track track
#:import control control
#:import play_indicator play_indicator

MainWidget:

<MainWidget>:
    control_layout: control_layout
    play_indicator_widget: play_indicator_widget
    tracks_layout: tracks_layout
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: control_layout
            size_hint_y: None
            height: dp(80)
            ControlButton:
                text: "PLAY"
                on_press: root.audio_play()
            ControlButton:
                text: "STOP"
                on_press: root.audio_stop()
            ControlButton:
                text: "+"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm += 5
            Label:
                size_hint_x: None
                width: dp(80)
                text: str(root.bpm)
            ControlButton:
                text: "-"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm -= 5
        PlayIndicator:
            id: play_indicator_widget
            size_hint_y: None
            height: dp(18)
            left_align: root.TRACK_STEPS_LEFT_ALIGN
        BoxLayout:
            id: tracks_layout
            orientation: "vertical"
